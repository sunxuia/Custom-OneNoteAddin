<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui" onLoad="Ribbon_Load" loadImage="GetImage">
  <ribbon>
    <tabs>
      <tab idMso="TabAddIns" label="Addin">
        <group id="grpDemo" label="Api Demo">
          <button id="btnStartDebug" onAction="StartDebug" label="Start Debug" size="large" image="Debug" />
          <button id="btnHierachy" imageMso="WorkspaceHtmlProperties" onAction="ShowHierachy" label="Hierachy" />
          <button id="btnCurrentWindow" imageMso="WorkspaceHtmlProperties" onAction="ShowCurrentWindow" label="Current Window" />
          <button id="btnCurrentPageXml" imageMso="WorkspaceHtmlProperties" onAction="ShowCurrentPageXml" label="Page XML" />
          <button id="btnSetPage" imageMso="WorkspaceHtmlProperties" onAction="SetPageToAExamplePage" screentip="set page to a example page" label="Reset Page" />
          <button id="btnInsertATable" imageMso="WorkspaceHtmlProperties" onAction="InsertATable" screentip="insert a table to cursor location" label="Insert Table" />
        </group>
        <group id="grpStyle" label="Style">
          <box id="box4" boxStyle="vertical">
            <comboBox id="cmbStyle" imageMso="CodeEdit" label="Code" showLabel="false" getText="GetText" onChange="onTextChange">
            </comboBox>
            <button id="btnInsertCode" imageMso="HtmlListCodeSnippets" label="Insert Code" onAction="onButtonClick" />
            <button id="btnInsertComment" label="Insert Comment" image="InsertComment" onAction="onButtonClick" />
          </box>
          <button id="btnOpenInVSCode" label="Open in VS Code" size="large" image="VSCode" onAction="onButtonClick" />
          <button id="btnCopyWithWord" imageMso="FileSaveAsWord97_2003" label="Copy With Word" size="large" onAction="onButtonClick" />
        </group>
        <group id="grpFont" label="Font">
          <box id="box1">
            <comboBox id="cmbFont1" imageMso="FontColorGallery" label="Font" getText="GetText" onChange="onTextChange" />
            <button id="btnSetFont1Cursor" label="Cursor" showImage="false" onAction="onButtonClick" />
            <labelControl id="lbl1" label="|" />
            <button id="btnSetFont1CtrlA" label="Ctrl + A" showImage="false" onAction="onButtonClick" />
            <labelControl id="lbl2" label="|" />
            <button id="btnSetFont1Page" label="Full Page" showImage="false" onAction="onButtonClick" />
          </box>
          <box id="box2">
            <comboBox id="cmbFont2" imageMso="FontColorGallery" label="Font" getText="GetText" onChange="onTextChange" />
            <button id="btnSetFont2Cursor" label="Cursor" showImage="false" onAction="onButtonClick" />
            <labelControl id="lbl3" label="|" />
            <button id="btnSetFont2CtrlA" label="Ctrl + A" showImage="false" onAction="onButtonClick" />
            <labelControl id="lbl4" label="|" />
            <button id="btnSetFont2Page" label="Full Page" showImage="false" onAction="onButtonClick" />
          </box>
          <box id="box3">
            <comboBox id="cmbFont3" imageMso="FontColorGallery" label="Font" getText="GetText" onChange="onTextChange" />
            <button id="btnSetFont3Cursor" label="Cursor" showImage="false" onAction="onButtonClick" />
            <labelControl id="lbl5" label="|" />
            <button id="btnSetFont3CtrlA" label="Ctrl + A" showImage="false" onAction="onButtonClick" />
            <labelControl id="lbl6" label="|" />
            <button id="btnSetFont3Page" label="Full Page" showImage="false" onAction="onButtonClick" />
          </box>
        </group>
        <group id="grpTable" label="Insert Table">
        </group>
        <group id="grpSetting" label="Setting">
          <button id="btnOpenSettingFile" imageMso="CurrentViewSettings" label="Open Setting File" size="large" onAction="OpenXmlFile" />
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>